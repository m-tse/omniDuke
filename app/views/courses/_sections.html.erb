<h1>Sections</h1>

<ul>
  <% for section in @course.sections %>
  <li>

    <h4>Times</h4>
    <%= section.time_slot.aces_value %>
    <h4>Description</h4>
    <%= section.description %>
    

    <h4>Instructors</h4>
    <ul class="unstyled">
      <% for instructor in section.instructors %>
      <li>
	<%= link_to instructor.toString, instructor_path(instructor.id) %>
      </li>
      <% end %>
    </ul>

    <h4>Room</h4>
    <%= section.room %>
    <h4>Enrollment</h4>
    <%= section.enrollment.to_s + "/" +section.capacity.to_s %>
    <h4>Waitlist</h4>
    <%= section.waitlist_enrollment.to_s+"/" + section.waitlist_capacity.to_s %>
   

    <h4>Class Number</h4>
    <%= section.class_number %>
    <h4>Location</h4>
    <%= section.location %>
  </li>

  <% end %>
</ul>
