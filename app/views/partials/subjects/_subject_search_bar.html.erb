<%= form_tag redirect, :method => :get do %>

<div class="input-append searchbar">
  <%= text_field_tag :search, params[:search], :class=>"span4" %>
  <%= button_tag "Search",  :class => "btn" %>
  <a href='#' id="subjectSearchBarHelp" class="btn btn-info" rel="popover" data-content="Search for your subject by name, keyword, or the courses in it." data-original-title="Confused?"><i class="icon-info-sign icon-white"></i></a>
</div>
<script type="text/javascript">
  $("#subjectSearchBarHelp").popover({placement: "bottom"});
</script>
 

<% end %>


