<h1>Review a course!</h1>

<%= form_for(@review, :html=>{:class => "form-horizontal"}) do |f| %>

<div class = "row">
  <div class="span3">
<% @fieldsHash.each_pair do |k,v| %>
<%= render :partial => 'number_field', :locals => {:model_value => k, :field_label => v, :form => f} %>
<% end %>
  </div>

  <div class="span6">
    <div class="control-group">
      <%= f.label "Course Review", class:"control-label" %>
      <div class="controls">
	<%= f.text_area :review_content, placeholder: "review content" %>
      </div>
    </div>
  </div>
</div>
<div class="row">
     <div class="form-actions">
       <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
     </div>
</div>
<% end %>
