var section = $("#section-slot-<%= j(params[:section]) %>");
<% @days.each do |day| %>
  var divClass = ['.', '<%= day %>', ' .timeSlots'].join("");
  var timeslot = "<%= j(@section.getTimeSlotStr(day)) %>";
  var timeDiv = [divClass, ' .ts', timeslot].join("");
  $(timeDiv).remove();
<% end %>

section.replaceWith("<%= j(render partial: 'schedulator/addSection', locals: { section: @section }) %>")
