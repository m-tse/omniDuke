<% if @conflict %>
    $("#schedulatorContainer .schedule").html("").append("<%= j(render partial: 'schedule_relationship/conflict') %>");
<% else %>
    var section = $("#section-slot-<%= j(params[:section]) %>");
    <% @days.each do |day| %>
      var divClass;
      divClass = ['.', '<%= day %>', ' .timeSlots'].join("");
      $(divClass).append("<%= j(render partial: 'schedulator/timeslot', locals: {section:@section, day:day}) %>");
    <% end %>

    section.replaceWith("<%= j(render partial: 'schedulator/removeSection', locals: { section: @section }) %>")
<% end %>