<!-- Displays current schedule -->
        <a href="#saveModal" id="save-modal-button" role="button" class="btn btn-primary" data-toggle="modal">Save</a>

        <!-- MODAL -->
        <div id="saveModal" class="modal hide fade" tabindex="-1" role="dialog">
            <%= form_tag("/schedulator_saved_relationships", method: :post, remote: true, id: "save-modal-form") do %>
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3>Save schedule</h3>
                </div>
                <div class="modal-body">
                    Name: <input type="text" name="name">
                </div>
                <div class="modal-footer">
                   <button type="button" class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button> 
                    <input type="submit" class="btn btn-primary" value="Confirm">
                </div>
            <% end %>
        </div>

