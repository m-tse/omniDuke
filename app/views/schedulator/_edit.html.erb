    <div class="row">
        <%= render partial: "schedulator/classList" %>
        <div class="span10" id="schedulatorContainer">
            <% if $state == "saved" %>
                <%= render 'schedulator/saved' %> 
            <% else %> <!-- state is current -->
                <%= render partial: "schedulator/schedulator"
                %>
            <% end %>
            <%= link_to "Done", schedulator_index_path(click_flag: "true"), {
                class: "btn"
            } %>
        </div>
    </div>
